<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:background="#ffffff">

    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="American"

            android:layout_span="2"
            android:padding="20dip"
            android:background="#b0b0b0"
            android:textColor="#000"/>
    </TableRow>

    <!-- Row 2 with 2 columns -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="Chinese"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textSize="17dp"
            android:textColor="#000000"
            android:padding="20dip"/>
        <Button
            android:text="South East Asian"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textSize="17dp"
            android:textColor="#000000"
            android:padding="20dip"/>
    </TableRow>

    <!-- Row 3 with 2 columns -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="Japanese"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:textColor="#000000"
            android:padding="20dip"/>
        <Button
            android:text="Korean"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:textColor="#000000"
            android:padding="20dip"/>
    </TableRow>

    <!-- Row 4 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="Arabian/Middle Eastern"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:padding="20dip"
            android:background="#b0b0b0"
            android:textColor="#000"/>
    </TableRow>

    <!-- Row 5 with 2 columns -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="Italian"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"/>
        <Button
            android:text="Barbeque"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:textSize="17dp"
            android:textColor="#000000"
            android:padding="20dip"/>
    </TableRow>

    <!-- Row 6 with 2 columns -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="Fast Food"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:textColor="#000000"
            android:padding="20dip"/>
        <Button
            android:text="Indian"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:textColor="#000000"
            android:padding="20dip"/>
    </TableRow>

    <!-- Row 7 with single column -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="Mediterranean"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:padding="20dip"
            android:background="#b0b0b0"
            android:textColor="#000"/>
    </TableRow>

    <!-- Row 8 with 2 columns -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <Button
            android:text="French"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:textColor="#000000"
            android:padding="20dip"/>
        <Button
            android:text="Mexican"
            android:textSize="17dp"
            android:layout_weight="1"
            android:background="#a09f9f"
            android:textColor="#000000"
            android:padding="20dip"/>
    </TableRow>
</TableLayout>